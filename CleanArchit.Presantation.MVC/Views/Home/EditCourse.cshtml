@using CleanArchit.Domain.Models
@model Course

@{
    ViewData["Title"] = "Edit Course";
}
<h1>@ViewData["Title"]</h1>

<div>
    @using (Html.BeginForm("EditCourse", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary()
        <p>
            @Html.DisplayFor(m=>m.Name,"Input name course")
            @Html.EditorFor(m=>m.Name)
        </p>
        <p>
            @Html.DisplayFor(m=>m.Description,"Input detali of course")
            @Html.EditorFor(m=>m.Description)

        </p>
        <p>
            @Html.DisplayFor(m=>m.Author,"Input author of course")
            @Html.EditorFor(m=>m.Author)

        </p>
        <input type="submit" value="Enter" />
    }
</div>
